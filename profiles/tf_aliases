#—————————
# Terraform Aliases
#—————————
alias tfi='echo "\033[1;95m:=-FMT-=:" ; terraform fmt ; terraform init'
alias tfp='echo "\033[1;95m:=-FMT-=:" ; terraform fmt ; terraform plan'
alias tfa='echo "\033[1;95m:=-FMT-=:" ; terraform fmt ; terraform apply'
alias tfo='echo "\033[1;95m:=-FMT-=:" ; terraform fmt ; terraform output'
alias tfc='echo "\033[1;95m:=-FMT-=:" ; terraform fmt ; terraform console'
alias tfd='terraform destroy'
alias tf='terraform'
